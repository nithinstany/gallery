<% title =  "Login" %>

<% form_for @user_session do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login ,:class => 'textbox'%>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password ,:class => 'textbox'%>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>

